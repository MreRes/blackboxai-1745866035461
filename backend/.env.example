# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/financial_bot

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRY=24h

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./whatsapp-session
WHATSAPP_HEADLESS=true

# Google Cloud Configuration (for Speech-to-Text)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-credentials.json
GOOGLE_PROJECT_ID=your-project-id

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100

# File Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB in bytes
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Security Configuration
CORS_ORIGINS=http://localhost:3000
SECURE_COOKIES=false  # Set to true in production
SESSION_SECRET=your_session_secret

# Backup Configuration
BACKUP_PATH=./backups
MAX_BACKUP_FILES=5

# NLP Configuration
NLP_LANGUAGE=id
NLP_THRESHOLD=0.6
SENTIMENT_ANALYSIS_ENABLED=true
DIALECT_PROCESSING_ENABLED=true

# Financial Configuration
DEFAULT_CURRENCY=IDR
MAX_TRANSACTION_AMOUNT=100000000  # 100 million IDR
SUSPICIOUS_AMOUNT_THRESHOLD=50000000  # 50 million IDR

# Notification Configuration
NOTIFICATION_ENABLED=true
NOTIFICATION_THRESHOLD=80  # Percentage of budget
NOTIFICATION_FREQUENCY=weekly

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_DEFAULT_PASSWORD=changeme123
MAX_LOGIN_ATTEMPTS=5
LOGIN_TIMEOUT=300  # 5 minutes in seconds

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600  # 1 hour in seconds

# Feature Flags
FEATURE_VOICE_MESSAGES=true
FEATURE_IMAGE_RECOGNITION=true
FEATURE_AUTO_CATEGORIZATION=true
FEATURE_FINANCIAL_INSIGHTS=true
FEATURE_GOAL_TRACKING=true
FEATURE_BUDGET_ALERTS=true

# API Keys (Add as needed)
# OCR_API_KEY=your_ocr_api_key
# FINANCIAL_DATA_API_KEY=your_api_key

# Development Only (Remove in production)
DEBUG=true
DEBUG_WHATSAPP=false
DEBUG_NLP=false
SKIP_AUTH=false
